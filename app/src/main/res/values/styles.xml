<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Map screen-->

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="ZoomButtonStyle" >
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:background">@drawable/zoom_button_shape</item>
        <item name="android:gravity">center</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginVertical">4dp</item>

    </style>

    <!--Places screen-->
    <style name="PlaceInfoText">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/place_info_text_size</item>
    </style>

    <style name="ScreenMessagesText">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/screen_messages_text_size</item>
    </style>

    <style name="TopBarTitle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title_top_bar_text_size</item>
    </style>


</resources>